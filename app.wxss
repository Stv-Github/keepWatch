@import './dist/style/weui.wxss';
@import "./pages/template/template.wxss";

page{
    height: 100%;
    font-size: 28rpx;
    color: #101010;
}

.footer-view{
    height: 100rpx;
}

/* 用户信息 */
.user_information{
    display: flex;
    padding: 15rpx 20rpx;
}
.user_cell_hd{
    width: 100rpx;
    height: 100rpx;
    background: #f5f5f5;
    border: 2rpx solid #d9d9d9;
    border-radius: 100%;
    margin-right: 20rpx;
}
.user_cell_hd image{
    width: 100%;
    height: 100%;
}
.user_cell_bd{
    width: 590rpx;
    /* height: 80rpx; */
    padding: 8rpx 0;
    position: relative;
}
.user_cell_bd .user_cell_time{
    font-size: 24rpx;
    color: #888888;
}
.user_cell_icon{
    position: absolute;
    top: 0;
    right: 0rpx;
    z-index: 10;
    display: flex;
    align-items: center;
}
.user_cell_icon image{
    width: 45rpx;
    height: 45rpx;
}