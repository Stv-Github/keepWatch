.per_header{
    width: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    padding: 30rpx 40rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #eee;
}
.per_userName{
    font-size: 32rpx;
}
.per_headerText{
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 15rpx;
    font-size: 24rpx;
    color: #999;
}
.per_img{
    width: 140rpx;
    height: 140rpx;
    border-radius: 100%;
    background: #fff;
    border: 5rpx solid #ccc;
    margin-right: 30rpx;
}
.per_img image{
    width: 100%;
    height: 100%;
}

.tabText{
    display: flex;
    padding: 20rpx 0;
}
.tabText > view{
    width: 33.3%;
    text-align: center;
}
.tabText .per_Text{
    display: block;
    font-size: 24rpx;
    color: #999;
}


/* 全部帖子 */
.allPostList_title{
    padding-left: 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #ccc;
    position: relative;
}
.allPostList_title:after{
    content: "";
    position: absolute;
    top: 25rpx;
    left: 20rpx;
    height: 30rpx;
    border-left: 5rpx solid #57B6D4;
}
.weui-article{
    border-top: 0;
    border-bottom: 20rpx solid #f5f5f5;
}