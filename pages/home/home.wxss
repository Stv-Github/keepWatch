.home-view .swiper-view{
    width: 100%;
    height: 375rpx;
    background: #f5f5f5;
}
.swiper-view image{
    width: 100%;
    height: 100%;
}

/* 分类 */
.classify-view{
    display: flex;
    flex-wrap: wrap;
    padding: 15rpx 0rpx;
    border-bottom: 20rpx solid #f5f5f5;
}
.classifyItems{
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx 0;
}
.classifyicon{
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 100%;
    margin-bottom: 10rpx;
}
.classifyicon image{
    width: 50rpx;
    height: 50rpx;
}
/* 广播 */
.broadcast-view{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rpx 40rpx 10rpx 30rpx;
}
.broadcastIcon{
    width: 100rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
}
.broadcast-view image{
    width: 70rpx;
    height: 70rpx;
}
.broadcastContent{
    width: 540rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
}
.broadcastContent text{
    display: -webkit-box;
    width: 440rpx;
    margin-right: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
/* 热门话题 */
.hotTopicTitle{
    display: flex;
    justify-content: space-between;
    padding:0rpx 30rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    border-bottom:1rpx dashed #999;
}
.hotTopicTitle .see{
    color: #E51C23;
}
.hotTopicScroll{
    width: 750rpx;
    display: flex;
    white-space: nowrap;
    color: #fff;
}
.hotTopicScroll view{
    position: relative;
    width: 320rpx;
    height: 230rpx;
    display: inline-block;
    background: #f2f2f2;
    border-right: 1rpx solid #f5f5f5;
}
.hotTopicScroll image{
    width: 100%;
    height: 100%;
}
.hotTopicScroll text{
    display: -webkit-box;
    position: absolute;
    left: 15rpx;
    bottom: 10rpx;
    width: 285rpx;
    white-space: normal;
    color: #fff;
    z-index: 10;
    font-size: 22rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    opacity: .8;
}
