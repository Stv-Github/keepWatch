/* 评论 */
.comHeader-view{
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ccc;
    box-sizing: border-box;
}
.comHeader-view text{
    color: #666;
}
.comHeader-view text.tabActive{
    font-size: 30rpx;
    color: #010101;
}
.param_content{
    margin: 0rpx 20rpx 0rpx 150rpx;
    border-bottom: 1rpx solid #D9D9D9;
}
.param_main{
    margin-bottom: 15rpx;
}
.recovery_area{
    width: 100%;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    background: #f5f5f5;
}
.reply_item{
    line-height: 40rpx;
    margin-bottom: 10rpx;
}
.reply_item text{
    color: #09554E;
}
/* 转发、点赞 */
.forwarded_item:after{
    content: " ";
    position: absolute;
    width:570rpx;
    right: 0;
    bottom: 0;
    left:150rpx;
    border-top: 1rpx solid #D9D9D9;
}
.forwarded_item:active{
    background: #f2f2f2;
}
.abulous-view{
    position:absolute;
    top:50%;
    right:10rpx;
    width:45rpx;
    height:45rpx;
    z-index:10;
    margin-top:-22.5rpx;
}
.abulous-view image {
    width: 100%;
    height: 100%;
}