.per_header{
    width: 100%;
    background: #000;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #fff;
    padding: 30rpx 150rpx 70rpx;
    box-sizing: border-box;
}
.per_header > view:nth-child(2){
    margin-top: 25rpx;
}
.per_header > view:nth-child(3){
    font-size: 24rpx;
}
.per_header > view:nth-child(4){
    font-size: 20rpx;
}
.per_header .per_headerText{
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 10rpx;
    text-align: center;
}
.per_img{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100%;
    border: 3rpx solid #f5f5f5;
    margin: 0 auto;
}
.per_img image{
    width: 100%;
    height: 100%;
}